---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import { pickLandscape } from "@/utils/hashUtils";
import SiteLayout from '@/components/layout/SiteLayout.astro';
import FormattedDate from '../../components/FormattedDate.astro';

const title = "Blog";
const description = "Andrew's blog";

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);

// Auto-discover landscapes under src/assets/landscapes
const landscapeModules = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/landscapes/*.{jpg,jpeg,png,webp,avif}",
  { eager: true }
);

// Extract the default export (ImageMetadata objects)
const landscapes: ImageMetadata[] = Object.values(landscapeModules).map(
  (mod) => mod.default
);
---
<SiteLayout title={title} description={description}>
	<section style="margin: 2em 0;">
		<ul>
			{posts.map((post) => {
				let hero = pickLandscape(landscapes, post.id);
				if (!hero) return null;
				return (
					<li>				    	
						<a href={`/blog/${post.id}/`}>					      			
							<Image src={hero} alt={post.data.title}					       		 		
								width={720} height={360} quality={80} />
							<h4 class="title">{post.data.title}</h4>
							<p class="date">
							<FormattedDate date={post.data.pubDate} />
						</p>
						</a>
					</li>
				);
			})}
		</ul>
	</section>
</SiteLayout>

<style>
	.title {
		margin: 0;
		color: rgb(var(--black));
		line-height: 1;
	}
	.date {
		margin: 0;
		color: rgb(var(--gray));
	}
	ul {
		display: flex;
		flex-wrap: wrap;
		gap: 2rem;
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	ul li {
		width: calc(50% - 1rem);
	}
	ul li * {
		text-decoration: none;
		transition: 0.2s ease;
	}
	ul li:first-child {
		width: 100%;
		margin-bottom: 1rem;
		text-align: center;
	}
	ul li:first-child img {
		aspect-ratio: 21 / 9;   /* optional: make the hero wider */
		width: 100%;
	}
	ul li:first-child .title {
		font-size: 2.369rem;
	}
	ul li img {
		aspect-ratio: 16 / 9;
		height: auto;
		object-fit: cover;
		margin-bottom: 0.5rem;
		border-radius: 12px;
	}
	ul li a {
		display: block;
	}
	ul li a:hover h4,
	ul li a:hover .date {
		color: rgb(var(--accent));
	}
	ul a:hover img {
		box-shadow: var(--box-shadow);
	}
	@media (max-width: 720px) {
		ul {
			gap: 0.5em;
		}
		ul li {
			width: 100%;
			text-align: center;
		}
		ul li:first-child {
			margin-bottom: 0;
		}
		ul li:first-child .title {
			font-size: 1.563em;
		}
	}
</style>